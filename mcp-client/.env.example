# MCP Gateway Server 配置示例
# 复制此文件为 .env 并修改相应值

# === 服务器配置 ===
MCP_GATEWAY_HOST=0.0.0.0
MCP_GATEWAY_PORT=8080

# === Claude API 配置 ===
ANTHROPIC_API_KEY=sk-your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4
CLAUDE_API_TIMEOUT=300

# === 客户机连接配置 ===
CLIENT_TIMEOUT=30
MAX_CLIENTS=100

# === 任务执行配置 ===
DEFAULT_MAX_STEPS=10
TASK_TIMEOUT=600

# === 日志配置 ===
LOG_LEVEL=INFO
# LOG_FILE=gateway.log  # 取消注释以启用文件日志

# === CORS 配置 ===
CORS_ORIGINS=["*"]

# === 其他配置 ===
ENABLE_DOCS=true